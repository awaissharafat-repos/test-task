@model TestTask.Models.ViewModels.ProductViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add Product";

    var ButtonText = "Add Product";
    if (Model.SingleProduct != null)
    {
        if (Model.SingleProduct.ProductId > 0)
        {
            ButtonText = "Update Product";
        }
    }

}

<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <span class="h4">@ViewData["Title"]</span>
            <a asp-action="AllProducts" asp-controller="Products" class="btn btn-warning float-right"> <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to Products</a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
        else if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="AddProduct" method="post">
            <input type="hidden" asp-for="SingleProduct.ProductId" />
            <div class="form-group">
                <label asp-for="SingleProduct.Name" class="control-label"></label>
                <input asp-for="SingleProduct.Name" class="form-control" required />
                <span asp-validation-for="SingleProduct.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SingleProduct.Price" class="control-label"></label>
                <input type="number" step="0.01" asp-for="SingleProduct.Price" class="form-control" required />
                <span asp-validation-for="SingleProduct.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SingleProduct.Quantity" class="control-label"></label>
                <input asp-for="SingleProduct.Quantity" class="form-control" required />
                <span asp-validation-for="SingleProduct.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success float-right"><i class="fa fa-save"></i> @ButtonText</button>
            </div>
        </form>
    </div>
</div>

